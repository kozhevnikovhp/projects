# build_types.cmake
#
# Custom CMAKE_BUILD_TYPEs
#
# * Release_O3
# * Release_O2
# * Release_O1
# * Release_O0
# * Release_WithAsserts -- to check for warnings
# * ProfilePerformance
# * PvtViewer -- restricted version just to read pvt and show GUI

SET(CMAKE_BUILD_TYPE Release_O3)
SET(CMAKE_C_FLAGS_RELEASE_O3 "-O3")
SET(CMAKE_CXX_FLAGS_RELEASE_O3 "-O3")

SET(CMAKE_BUILD_TYPE Release_O2)
SET(CMAKE_C_FLAGS_RELEASE_O2 "-O2")
SET(CMAKE_CXX_FLAGS_RELEASE_O2 "-O2")

SET(CMAKE_BUILD_TYPE Release_O1)
SET(CMAKE_C_FLAGS_RELEASE_O1 "-O1")
SET(CMAKE_CXX_FLAGS_RELEASE_O1 "-O1")

SET(CMAKE_BUILD_TYPE Release_O0)
SET(CMAKE_C_FLAGS_RELEASE_O0 "-O0")
SET(CMAKE_CXX_FLAGS_RELEASE_O0 "-O0")

SET(CMAKE_BUILD_TYPE Release_WithAsserts)
SET(CMAKE_C_FLAGS_RELEASE_WITHASSERTS "-UNDEBUG -O3")
SET(CMAKE_CXX_FLAGS_RELEASE_WITHASSERTS "-UNDEBUG -O3")

SET(CMAKE_BUILD_TYPE ProfilePerformance)
SET(CMAKE_C_FLAGS_PROFILEPERFORMANCE "-g")
SET(CMAKE_CXX_FLAGS_PROFILEPERFORMANCE "-g")

SET(CMAKE_BUILD_TYPE PvtViewer)
SET(CMAKE_C_FLAGS_PVTVIEWER "-O3 -DPVT_VIEWER=1")
SET(CMAKE_CXX_FLAGS_PVTVIEWER "-O3 -DPVT_VIEWER=1")

# EOF build_types.cmake
